var open = false;

$(document).ready(function(){

  $('#clicksidebar').click(function(){
  x = $('#clicksidebar').position();
  var vpw = document.getElementById('columnThree').offsetWidth;
  console.log(vpw);
  if (x > (vpw)) { open = false}
    if (open == false) {
      sidebarOpen(vpw);
      open = true;
    }
    else {
      sidebarClose(vpw);
      open = false;
    };
  });

  var toggle = false;
  $('#search-placeholder').hide();
  $('#searchpopout').click(function(){
    if (toggle == false) {
      $('#search-placeholder').show();
      $('#search-placeholder').animate({right:"0"}, 400);
      toggle = true;
    } else {
      $('#search-placeholder').animate({right:"-190px"}, 400, function(){
        $('#search-placeholder').hide();
      });
      toggle = false;
    }
  });
});


function sidebarOpen(vpw) {
  $("#columnThree").animate({right: "0"}, "slow", "swing").show();
  $('#clicksidebar').animate({right: vpw}, "slow", "swing");
}

function sidebarClose(vpw) {
  $("#columnThree").animate({right: -vpw}, "slow", "swing");
  $('#clicksidebar').animate({right: "-5px"}, "slow", "swing");
}
