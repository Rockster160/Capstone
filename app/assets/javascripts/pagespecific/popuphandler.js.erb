$(document).ready(function(){
  notificationPopper();
});

var notificationPopper = function() {
  var theDiv = $('.popup-notification')
  var divId = $('#popup-id')

  theDiv.click(function(){
    console.log("I've been clicked!");
    $(this).stop().slideUp(300, function(){
      $(this).remove();
      notificationPopper();
    });
  })

  theDiv.mouseover(function() {
    $('.popup-notification').stop(true);
  });

  theDiv.mouseleave(function() {
    divId.delay(1000).slideUp(300, function(){
      $(this).remove();
      notificationPopper();
    });
  });

  divId.delay(4000).slideUp(300, function(){
    $(this).remove();
    notificationPopper();
  });
}

var rmElement = function(pass) {
  $(pass).remove();
  notificationPopper();
};
