$(document).ready(function(){
  setInterval(notificationPopper, 4000);
});

var notificationPopper = function() {
  var theDiv = $('.popup-notification')
  var divId = $('#popup-id')

  divId.delay(500).slideUp(300, rmElement);

  theDiv.click(function(){
    $(this).slideUp(300, function(){
      $(this).remove();
    });
  })

  theDiv.mouseover(function() {
    $(this).stop(true);
  });

  theDiv.mouseleave(function() {
    $(this).delay(500).slideUp(300, rmElement);
  });
}

var rmElement = function() {
  $('#popup-id').remove();
};
