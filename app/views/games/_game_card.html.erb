<div id='listitem'>
  <div id="uppercard">
    <% if url == "user" %>
      <a href="/users/<%= game.id %>" id="gameimage"><%= image_tag(game.ava, id: "gameicon") %></a>
    <% else %>
      <a href="/games/<%= game.id %>" id="gameimage"><%= image_tag(game.ava, id: "gameicon") %></a>
    <% end %>
    <% if url == 'game' %>
      <h4 id="title"><%= game.name %></h4>
    <% else %>
      <h4 id="title"><%= game.username %></h4>
    <% end %>
    <div id="briefing">
      <%= game.about %>
    </div>
  </div>
  <% if url == 'game' %>
    <%= link_to "Quick Play!", play_path(id: game.id), class: "btn btn-success pull-left" %>
    <%#= link_to show_trophies_path, class: "btn btn-neutral pull-right trophy-button", remote: true do %>
      <!-- Trophies -->
    <%# end %>
  <% end %>
</div>
