<% Game.all.each do |game| %>
  <div id="listitem">
    <div id="gameimage">
      <a href="/games/<%= game.id %>"><%= image_tag(game.ava, id: "gameicon") %></a>
    </div>
    <div id="title">
      <h4><%= game.name %></h4>
      <div id="briefing">
        <%= game.about %>
      </div>
    </div>
    <div id="trophies">
      <h4>Trophies</h4>
      <table>
        <tr>
          <td><strong>Today:&nbsp;</strong></td>
          <td><i>Some_User</i>&nbsp;</td>
          <td><font color="yellow">Score</font></td>
        </tr>
        <tr>
          <td><strong>This week:&nbsp;</strong></td>
          <td><i>wwwwwwwwwwwwwww</i>&nbsp;</td>
          <td><font color="yellow">Score</font></td>
        </tr>
        <tr>
          <td><strong>This Month:&nbsp;</strong></td>
          <td><i>Hello</i>&nbsp;</td>
          <td><font color="yellow">Score</font></td>
        </tr>
        <tr>
          <td><strong>All-Time:&nbsp;</strong></td>
          <td><i>Rockster160</i>&nbsp;</td>
          <td><font color="yellow">Score</font></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
