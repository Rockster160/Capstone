<h1>Notifications</h1>
<% @user.notifications.reverse.first(50).each do |notify| %>
<% if notify.icon == 2 %>
  <div class="row alert-cell giveit-gold">
<% else %>
  <div class="row alert-cell">
<% end %>
    <% if notify.game_id %>
      <%= link_to image_tag(Game.find(notify.game_id).ava, class: 'notification-image'), game_path(notify.game_id) %>
    <% end %>
    <% if notify.sent_id %>
      <%= link_to image_tag(User.find(notify.sent_id).ava, class: 'notification-image'), user_path(notify.sent_id) %>
    <% end %>
    <%= notify.title %><br/>
    <%= notify.message %>
  </div>
<% end %>
