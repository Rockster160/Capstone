<div class="row">
  <% if @listgame.length > 0 %>
    <% if @listuser.length > 0 %>
      <div id="searchlist" class="col-md-4 col-sm-6 col-xs-12">
    <% else %>
      <div id="searchlist" class="col-xs-12">
    <% end %>
      <h1>Games</h1>
      <% if @listgame.length > 10 %>
        <% how_many_games = 10 %>
      <% else %>
        <% how_many_games = @listgame.length %>
      <% end %>
      <% how_many_games.times do |list| %>
        <div id="searchitem">
          <% game = Game.find(@listgame[list][0]) %>
          <% if @listuser.length > 0 %>
            <div class="col-xs-12">
          <% else %>
            <div class="col-md-4 col-sm-6 col-xs-12">
          <% end %>
            <%= render :partial => 'games/game_card', locals: {game: game, url: 'game'} %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @listuser.length > 0 %>
    <% if @listgame.length > 0 %>
      <div id="searchlist" class="col-md-8 col-sm-6 col-xs-12">
    <% else %>
      <div id="searchlist" class="col-xs-12">
    <% end %>
      <h1>Users</h1>
      <% if @listuser.length > 20 %>
        <% how_many_user = 20 %>
      <% else %>
        <% how_many_user = @listuser.length %>
      <% end %>
      <% (how_many_user).times do |list| %>
        <div id="searchitem">
          <% user = User.find(@listuser[list][0]) %>
          <div class="col-md-6 col-xs-12">
            <%= render :partial => 'games/game_card', locals: {game: user, url: 'user'} %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
